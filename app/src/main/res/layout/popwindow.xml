<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkBlue" >

    <EditText
        android:id="@+id/taskNameET"
        android:layout_width="265dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="472dp"
        android:background="@drawable/rounded_edittext"
        android:hint="@string/task_title"
        android:inputType="text"
        android:padding="10dp"
        android:text=""
        android:textSize="18sp"
        android:importantForAutofill="no" />

    <EditText
        android:id="@+id/taskDescET"
        android:layout_width="265dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="345dp"
        android:background="@drawable/rounded_edittext_green"
        android:gravity="top"
        android:hint="@string/description"
        android:inputType="textMultiLine"
        android:padding="10dp"
        android:textSize="14sp"
        android:importantForAutofill="no" />

    <EditText
        android:id="@+id/taskDateET"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="276dp"
        android:background="@drawable/rounded_edittext_yellow"
        android:ems="12"
        android:hint="@string/due_date"
        android:inputType="date"
        android:padding="10dp"
        android:importantForAutofill="no" />

    <FrameLayout
        android:background="@drawable/rounded_edittext_yellow"
        android:layout_width="125dp"
        android:layout_height="43dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="165dp"
        android:layout_marginLeft="165dp"
        android:layout_marginBottom="277dp">

        <Spinner
            android:id="@+id/taskCatSP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:ems="12" />
    </FrameLayout>

    <EditText
        android:id="@+id/taskDurET"
        android:layout_width="131dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginEnd="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginBottom="204dp"
        android:background="@drawable/rounded_edittext_red"
        android:ems="12"
        android:hint="@string/duration"
        android:inputType="number"
        android:padding="10dp"
        android:text=""
        android:importantForAutofill="no" />

    <EditText
        android:id="@+id/taskScoreET"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="165dp"
        android:layout_marginLeft="165dp"
        android:layout_marginBottom="204dp"
        android:background="@drawable/rounded_edittext_red"
        android:ems="12"
        android:hint="@string/score"
        android:inputType="number"
        android:padding="10dp"
        android:importantForAutofill="no" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="201dp"
        android:layout_marginLeft="201dp"
        android:layout_marginBottom="130dp"
        android:background="@drawable/rounded_edittext"
        android:onClick="addTaskButton"
        android:text="@string/save"
        android:textSize="20sp" />

    <CheckBox
        android:id="@+id/taskRemCB"
        android:layout_width="134dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="136dp"
        android:background="@drawable/rounded_edittext"
        android:padding="10dp"
        android:text="@string/reminder" />

</RelativeLayout>